" rebind esc because of Mac touch esc key
" esc in insert mode
inoremap jk <esc>
" esc in command mode
cnoremap jk <C-C>

set timeoutlen=500
let mapleader=" "

" New line without insert
nnoremap <leader>o o<Esc>
nnoremap <leader>O O<ESC>

" Keybinding for yanking and pasting from system keyboard
noremap <leader>p "+p
noremap <leader>P "+P
noremap <leader>y "+y
noremap <leader>d "+d
noremap <leader>D "+D

" (relative) line numbers
set relativenumber
"
" Search
set ignorecase
set smartcase
